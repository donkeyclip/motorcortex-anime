{
  "name": "@kissmybutton/motorcortex-anime",
  "version": "1.1.6",
  "description": "Annime plugin for MotorCortex",
  "main": "./dist/main.js",
  "author": "KissMyButton PC (kissmybutton.gr) <opensource@kissmybutton.gr>",
  "repository": {
    "type": "git",
    "url": "https://github.com/kissmybutton/motorcortex-anime.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.3.2"
  },
  "scripts": {
    "update-force:packages": "node wipe-dependencies.js && rm -rf node_modules && npm update --save-dev && npm update --save",
    "update:packages": "npm update --save/--save-dev",
    "concurrently": "concurrently -c \"cyan.bold,magenta.bold\" --names \"JS,Styles\"",
    "lint:styles": "stylelint  \"src/**.css\" \"src/**/*.scss\" --config .stylelintrc.json",
    "lint:js": "eslint -c .eslintrc src/**/*.{js,jsx} ",
    "lint": "npm run concurrently \"npm run lint:js\" \"npm run lint:styles\" ",
    "lint:fix": "npm run concurrently  \"npm run lint:js -- --fix\" \"npm run lint:styles -- --fix\"",
    "build": "npx babel ./src --out-dir ./dist",
    "start": "webpack-dev-server --inline --hot --disableHostCheck --config ./demo/webpack.config.js",
    "build:demo": "webpack --config ./demo/webpack.config.js",
    "test": "HERE GOES YOUR TEST TASK",
    "test:prod": "npm run lint",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "prebuild": "rimraf dist",
    "precommit": "lint-staged",
    "prepush": "npm run test:prod",
    "commitmsg": "commitlint -E GIT_PARAMS"
  },
  "keywords": [
    "motorcortex",
    "animation"
  ],
  "lint-staged": {
    "linters": {
      "*.json": [
        "prettier --write",
        "git add"
      ],
      "*.{css,scss}": [
        "stylelint  \"src/**.css\" \"src/**/*.scss\" --config .stylelintrc.json --fix",
        "git add"
      ],
      "*.{js,jsx}": [
        "eslint --fix",
        "git add"
      ]
    }
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "animejs": "^2.2.0"
  },
  "peerDependencies": {
    "@kissmybutton/motorcortex": "^2.0.1-rc1"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.0.1",
    "@kissmybutton/motorcortex": "^2.0.1-rc3",
    "@kissmybutton/motorcortex-player": "^1.3.14",
    "@semantic-release/changelog": "^2.0.2",
    "@semantic-release/git": "^5.0.0",
    "@semantic-release/github": "^4.2.17",
    "@semantic-release/npm": "^3.3.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "*",
    "babel-preset-es2015-node5": "^1.2.0",
    "babel-preset-stage-2": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "commitizen": "^2.10.1",
    "concurrently": "^3.6.0",
    "coveralls": "^3.0.0",
    "css-loader": "^0.28.11",
    "cz-conventional-changelog": "^2.1.0",
    "es6-promise": "^4.2.4",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.7.0",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "exports-loader": "^0.7.0",
    "husky": "^0.14.0",
    "imports-loader": "^0.8.0",
    "json-stringify-safe": "^5.0.1",
    "lint-staged": "^7.3.0",
    "node-sass": "^4.11.0",
    "npx": "*",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.3",
    "sass-loader": "^7.0.1",
    "semantic-release": "^15.13.2",
    "shelljs": "^0.8.3",
    "stylelint": "^9.9.0",
    "stylelint-config-prettier": "^3.3.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-sass-guidelines": "^5.3.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.4.4",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14",
    "whatwg-fetch": "^2.0.4"
  }
}
